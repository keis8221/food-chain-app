{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"{server,web}/**/{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "lint-staged": {
    "*.{js,ts,md,yml,html,json,css}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
